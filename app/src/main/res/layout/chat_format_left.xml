<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="true"
    >
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/chatiml"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintRight_toLeftOf="@id/chatll"/>


<LinearLayout
    android:layout_width="0dp"
    app:layout_constraintWidth_percent="0.7"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="5dp"
    app:layout_constraintLeft_toRightOf="@id/chatiml"
    android:id="@+id/chatll">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingRight="3dp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:paddingBottom="2.5dp"
        android:paddingTop="2.5dp"
        android:textColor="@color/colorPrimary"
        android:text="name"
        android:id="@+id/nameleft"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="message"
        android:backgroundTint="#cfccff"
        android:background="@drawable/round"
        android:textColor="#000000"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingBottom="4dp"
        android:paddingTop="3dp"
        android:id="@+id/messageleft"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="2.5dp"
        android:paddingTop="2.5dp"
        android:textSize="8sp"
        android:alpha="0.5"
        android:text="time"
        android:textColor="#000000"
        android:layout_gravity="left"
        android:id="@+id/timeleft" />
</LinearLayout>

</android.support.constraint.ConstraintLayout>